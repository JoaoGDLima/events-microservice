    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Novo evento:</h3>
<div class="card">
    <div class="card-body">
        <form action="/events/events/add" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" id="name" name="name" placeholder="Nome do evento" class="form-control">
            <label for="nome">Descrição:</label>
            <input type="text" id="description" name="description" placeholder="Descrição do evento" class="form-control">     
            <label for="nome">Limite de participantes:</label>
            <input type="number" id="places" name="places" placeholder="limite de participantes do evento" class="form-control">     
            <label for="nome">Data:</label>
            <input type="date" id="date" name="date" placeholder="Data do evento" class="form-control">     
            <br>
            <button type="submit" class="btn btn-success">Criar evento</button>
        </form>
    </div>    
</div>